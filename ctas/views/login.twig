{% extends "layout.twig" %}

{% block content %}
    <h3>Ingresa tus datos para iniciar sesión</h3>
    <p>
        <a class="btn btn-default" href="{{ '' | url }}">Regresar</a>
    </p>

    {% if errors %}
        {% include('partials/errors.twig')  %}
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="inputCurp">CURP</label>
            <input class="form-control" type="text" name="curp" id="inputCurp" maxlength="18">
        </div>
        <div class="form-group">
            <label for="inputPassword">Contraseña</label>
            <input class="form-control" type="password" name="password" id="inputPassword" maxlength="20">
        </div>

        <br>
        <input class="btn btn-primary" type="submit" value="Inicia sesión">
    </form>
    <br>
    <ul>
        <li>
            <h3>¿Aún no tienes cuenta? <a href="{{ 'usuarios/signup' | url }}">Registrate aquí</a></h3>
        </li>
    </ul>
{% endblock %}
