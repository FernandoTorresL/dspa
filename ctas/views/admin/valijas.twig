{%  extends "layout.twig" %}

{% block title %}Valijas{% endblock %}


{% block content %}
    <p>
        <a class="btn btn-default" href="{{ 'admin' | url }}">Regresar</a>
    </p>

    <h2>Valijas</h2>
    <p>
        <a class="btn btn-primary" href="{{ 'admin/valijas/crear' | url }}">Nueva valija</a>
    </p>
    <table class="table">
        <tr>
            <th>Num Oficio DIR</th>
            <th>Num Oficio Delegación</th>
            <th>Fecha Recepción DIR</th>
            <th>Comentario</th>
            <th>Archivo</th>
        </tr>
        {% for valija in valijas %}
            <tr>
                <td>{{ valija.num_oficio_ca }}</td>
                <td>{{ valija.num_oficio_del }}</td>
                <td>{{ valija.fecha_recepcion_ca|date("d-M-Y") }}</td>
                <td>{{ valija.comentario }}</td>
                <td>{{ valija.archivo }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}