{%  extends "layout.twig" %}

{% block title %}Inventario{% endblock %}

{% block inventario %}
    <p>
        <a class="btn btn-default" href="{{ 'admin' | url }}">Regresar</a>
    </p>

    <h2>Inventario</h2>
    <h4>Fecha de corte: {{ inventario.fecha_corte|date("d-M-Y") }}</h4>
    <br>
    <br>
    <table class="table table-condensed" id="table_inventario">
        <tr class="text-center">
            <th class="text-center">Usuario</th>
            <th class="text-center">CIZ Activos</th>
            <th class="text-center" >Nombre Completo</th>
            <th class="text-center" >Grupo</th>
            <th class="text-center">Info</th>
            <th class="text-center" width="100%">Tipo Cuenta</th>
        </tr>
        {% for detalle_cta in listado_detalle_ctas %}
            <tr>
                <td class="text-left">{{ detalle_cta.cuenta }}</td>
                <td class="text-center">{{ detalle_cta.ciz_id }}</td>
                <td class="text-left" width="30%">{{ detalle_cta.nombre }}</td>
                <td class="text-center">{{ detalle_cta.gpo_owner.descripcion }}</td>
                <td class="text-right" width="40%">{{ detalle_cta.install_data }}</td>
                <td class="text-right" width="40%">{{ detalle_cta.area.nombre }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}