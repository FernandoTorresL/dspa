{%  extends "layout.twig" %}

{% block title %}Inventario{% endblock %}

{% block inventario %}
    <p>
        <a class="btn btn-default" href="{{ 'admin' | url }}">Regresar</a>
    </p>

    <h2>Inventario</h2>

    <table class="table table-condensed" id="table_inventario">
        <tr class="text-center">
            <th class="text-center">Usuario</th>
            <th class="text-center">CIZ Activos</th>
            <th class="text-center" >Nombre Completo</th>
            <th class="text-center" >Grupo</th>
            <th class="text-center">Info</th>
            <th class="text-center" width="100%">Tipo Cuenta</th>
        </tr>
        {% for usuario in listado_usuarios %}
            <tr>
                <td class="text-left">{{ usuario.Usuario }}</td>
                <td class="text-center">{{ usuario.CIZ_Activos }}</td>
                <td class="text-left" width="30%">{{ usuario.Nombre }}</td>
                <td class="text-center">{{ usuario.Grupo }}</td>
                <td class="text-right" width="40%">{{ usuario.Info }}</td>
                <td class="text-right" width="40%">{{ usuario.Tipo_Cuenta }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}