            <a href="{{ 'admin/lotes' | url }}">Administrar lotes</a>
        </li>
        <li>
            <a href="{{ 'admin/users' | url }}">Manage Users</a>
        </li>
        <li>
            <a href="{{ 'admin/usuarios' | url }}">Administrar Usuarios</a>
        </li>
        <li>
            <a href="{{ 'auth/logout' | url }}">Logout Blog</a>
