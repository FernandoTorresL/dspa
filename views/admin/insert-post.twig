{%  extends "layout.twig" %}

{% block content %}
    <h2>New Post</h2>
    <p>
        <a class="btn btn-default" href="{{ 'admin/posts' | url }}">Back</a>
    </p>
    {% if errors %}
        {% include('partials/errors.twig')  %}
    {% endif %}
    {% if result %}
        <div class="alert alert-success">Post Saved!</div>
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input disabled class="form-control" type="text" name="title" id="inputTitle" value="{{ title }}">
        </div>
        <div class="form-group">
            <label for="inputImg">Title</label>
            <input disabled class="form-control" type="text" name="img" id="inputImg" value="{{ img_url }}">
        </div>
        <textarea disabled class="form-control" name="content" id="inputContent" rows="5">{{ content }}</textarea>
    {% else %}
        <form method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="inputTitle">Title</label>
                <input class="form-control" type="text" name="title" id="inputTitle" value="{{ title }}">
            </div>
            <div class="form-group">
                <label for="inputImg">Img URL</label>
                <input class="form-control" type="text" name="img" id="inputImg" value="{{ img_url }}">
            </div>
            <textarea class="form-control" name="content" id="inputContent" rows="5">{{ content }}</textarea>
            <br>
            <input class="btn btn-primary" type="submit" value="Save">
        </form>
    {% endif %}
    <br>
{% endblock %}

{% block js %}
    <script>
        function validateForm() {
            var title = document.getElementById('inputTitle').value.trim();
            if (title === '') {
                swal(
                    'Oops...',
                    'Title is required...',
                    'error'
                );
                return false;
            }
        }
    </script>
{% endblock %}