{% extends "layout.twig" %}

{% block content %}
    <h2>Ingresa los datos para iniciar sesión</h2>
    {% if errors %}
        {% include('partials/errors.twig')  %}
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="inputCurp">CURP</label>
            <input class="form-control" type="text" name="curp" id="inputCurp" maxlength="18">
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input class="form-control" type="password" name="password" id="inputPassword">
        </div>

        <br>
        <input class="btn btn-primary" type="submit" value="Inicia sesión">
    </form>
{% endblock %}
